@model Oblig2_Blog.Models.Entities.Post

@{
    ViewData["Title"] = "Delete";
}

<h2>Slett innlegg</h2>
<br />
<h3>Vil du slette dette innlegget?</h3>
<div>
    <h4>@Model.PostTitle</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Innlegg tekst:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostText)
        </dd>
        <dt class="col-sm-2">
            Opprettet:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PostId" />
        <input type="hidden" asp-for="BlogId" />
        <input type="submit" value="Slett" class="btn btn-danger" /> |
        <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId">Tilbake</a>
    </form>
</div>

